{
  "defaultSeverity": "error",
  "extends": ["tslint:recommended"],
  "jsRules": {},
  "rules": {
    "ordered-imports": [
      true,
      {
        "import-sources-order": "case-insensitive",
        "named-imports-order": "case-insensitive",
        "module-source-path": "full",
        "grouped-imports": true,
        "groups": [
          {
            "name": "relative dir",
            "match": "^\\..*",
            "order": 2
          },
          {
            "name": "node_modules",
            "match": ".*",
            "order": 1
          }
        ]
      }
    ]
  },
  "rulesDirectory": []
}
